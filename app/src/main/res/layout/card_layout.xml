<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="200dp"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/card_view"
                                    app:cardCornerRadius="20dp"
                                    android:layout_marginBottom="25dp"
                                    >

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rec_with_shadow"
                            android:orientation="vertical"
                            android:weightSum="1">
                        <ImageView
                                android:id="@+id/itemImage"
                                android:layout_width="wrap_content"
                                android:scaleType="fitXY"
                                android:layout_weight="0.5"
                                android:src="@drawable/park"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_height="0dp"/>
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="0.5" android:orientation="vertical" android:layout_marginStart="20dp">
                        <TextView
                                android:id="@+id/itemTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                app:layout_constraintTop_toTopOf="parent"
                                android:text="test"
                                app:layout_constraintLeft_toRightOf="@+id/itemImag"/>
                            <TextView
                                    android:id="@+id/itemCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/searchBar"
                                    app:layout_constraintTop_toBottomOf="@+id/itemTitle"
                                    app:layout_constraintLeft_toRightOf="@+id/itemImage"
                                    android:text="Kategorie"/>
                    </LinearLayout>
                    </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:id="@+id/firstTag" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:paddingVertical="3dp"
                      android:paddingHorizontal="8dp" android:layout_marginTop="70dp"
                      android:textColor="@color/white" android:background="@drawable/rectangle_red" android:visibility="invisible"/>
            <TextView android:id="@+id/secondTag" android:layout_width="wrap_content" android:layout_marginStart="5dp"
                      android:layout_height="wrap_content" android:paddingVertical="3dp"
                      android:paddingHorizontal="8dp"  android:layout_marginTop="70dp"
                      android:textColor="@color/white" android:background="@drawable/rectangle_blue" android:visibility="invisible"/>
            <TextView android:id="@+id/thirdTag" android:layout_width="wrap_content" android:layout_marginStart="5dp"
                      android:layout_height="wrap_content" android:paddingVertical="3dp"
                      android:paddingHorizontal="8dp"  android:layout_marginTop="70dp"
                      android:textColor="@color/white" android:background="@drawable/rectangle_green" android:visibility="invisible"/>
            <TextView android:id="@+id/fourthTag" android:layout_width="wrap_content" android:layout_marginStart="5dp"
                      android:layout_height="wrap_content" android:paddingVertical="3dp"
                      android:paddingHorizontal="8dp" android:layout_marginTop="70dp"
                      android:textColor="@color/white" android:background="@drawable/rectangle_purple" android:visibility="invisible"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>