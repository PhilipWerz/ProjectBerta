<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="@drawable/rec_with_shadow">
    <ImageView
            android:layout_width="31dp"
            android:layout_height="26dp" app:srcCompat="@drawable/three_lines" android:id="@+id/settingsIcon"
            android:tint="@color/app_blue"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"/>
        <SearchView android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/custom_background"
                android:iconifiedByDefault="false"
                android:queryHint="Suche..."
                android:queryBackground="@android:color/transparent"

        />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:orientation="horizontal" android:layout_gravity="center">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:text="Hey Paul"
                  android:textColor="@color/app_blue"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:textSize="34sp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:text="stay safe "
                  android:textColor="@color/app_blue"
                  android:gravity="center"
                  android:textStyle="normal"
                  android:textSize="20sp"
        />
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:text=":D"
                  android:textColor="@color/emojiColor"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:textSize="22sp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginTop="50dp" android:layout_gravity="center" android:background="@drawable/rec_with_shadow" android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"  android:padding="20dp" android:orientation="horizontal" android:layout_gravity="center">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal" android:gravity="center">
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_marginEnd="10dp"
                        android:src="@drawable/warning_icon"
                               android:scaleX="1.2"
                               android:scaleY="1.2"
                    />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Achtung"
                              android:gravity="center"
                              android:textColor="@color/danger"
                              android:textSize="24sp"

                    />
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_marginStart="10dp"
                               android:src="@drawable/warning_icon"
                               android:scaleX="1.2"
                               android:scaleY="1.2"
                    />
                </LinearLayout>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="150dp"  android:layout_marginTop="30dp" android:background="@drawable/rec_with_shadow">

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="150dp"  android:layout_marginTop="30dp" android:background="@drawable/rec_with_shadow">

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="150dp"  android:layout_marginTop="30dp" android:background="@drawable/rec_with_shadow">

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="150dp"  android:layout_marginTop="30dp" android:background="@drawable/rec_with_shadow">

    </LinearLayout>


</LinearLayout>
</ScrollView>